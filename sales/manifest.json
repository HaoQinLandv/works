{
   "minimum_chrome_version": "20.0.0",
   "version": "1.1.0",
   "manifest_version": 2,
   "short_name": "特价优惠推送",
   "name": "特价优惠实时推送：白菜党必备神器",
   "description": "收集什么值得买、逛丢、惠惠网、天猫、京东、易迅、苏宁易购、亚马逊、一号店等各大购物网站的实时特价优惠信息，可以订阅关键词，白菜党必备神器！",
   "options_page": "options.html",
   "icons": {
      "128": "icon128.png",
      "64": "icon64.png"
   },
   "permissions": ["tabs", "https://*.sinaapp.com/*", "http://*.sinaapp.com/*", "notifications"],
   "background": {
      "persistent": true,
      "scripts": ["js/jquery.js", "background.js"]
   },
   "browser_action": {
      "default_icon": "icon128.png",
      "default_popup": "popup.html",
      "default_title": "特价商品实时推送"
   },
   "web_accessible_resources": [
      "css/*.css",
      "img/*",
      "js/*"
   ]
}
